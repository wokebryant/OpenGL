<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_gradient_black">

    <View
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/bg_round_purple"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:includeFontPadding="false"
        android:layout_centerVertical="true"
        android:layout_marginLeft="37dp"
        android:text="Your Mark"
        android:textSize="14dp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/answerCheckTv"
        android:layout_width="202dp"
        android:layout_height="34dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="Check the correct answer"
        android:textSize="14dp"
        android:gravity="center"
        android:textColor="@color/workbox_green_text_color"
        android:background="@drawable/bg_3d_mark_check"/>

</RelativeLayout>